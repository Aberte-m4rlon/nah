<header class="bg-green-700 text-white px-6 py-3 flex justify-between items-center shadow-lg">
  <h1 class="text-xl font-bold">🛍 XianFire Shop</h1>
  <nav class="space-x-6">
    <a href="/" class="hover:underline">Home</a>
    <a href="/cart" class="hover:underline">Cart</a>
    {{#if user}}
      {{#if (eq user.role "admin")}}
        <a href="/admin/dashboard" class="hover:underline">Dashboard</a>
      {{else}}
        <!-- ✅ Add new link for customers -->
        <a href="/orders" class="hover:underline">My Orders</a>
      {{/if}}
      <a href="/logout" class="hover:underline">Logout ({{user.name}})</a>
    {{else}}
      <a href="/login" class="hover:underline">Login</a>
    {{/if}}
  </nav>
</header>

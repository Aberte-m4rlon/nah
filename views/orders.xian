<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Glassmorphism E-Commerce</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .glass {
      background: rgba(255, 255, 255, 0.15);
      border-radius: 20px;
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.3);
      box-shadow: 0 8px 32px rgba(31, 38, 135, 0.2);
    }
    .fade-enter {
      opacity: 0;
      transform: scale(0.95);
    }
    .fade-enter-active {
      opacity: 1;
      transform: scale(1);
      transition: opacity 0.3s ease, transform 0.3s ease;
    }
    .fade-exit {
      opacity: 1;
      transform: scale(1);
    }
    .fade-exit-active {
      opacity: 0;
      transform: scale(0.95);
      transition: opacity 0.2s ease, transform 0.2s ease;
    }
  </style>
</head>
<body class="bg-gradient-to-br from-blue-200 via-purple-200 to-pink-200 min-h-screen flex flex-col items-center justify-center font-sans text-gray-800">

  <!-- 🛍️ Header -->
  <header class="glass px-6 py-4 flex justify-between items-center w-11/12 md:w-3/4 mb-10 shadow-lg">
    <h1 class="text-2xl font-bold text-gray-800">✨ MyShop</h1>
    <nav class="space-x-6 text-gray-700 font-medium">
      <button id="aboutBtn" class="hover:text-blue-600">About</button>
      <button id="exploreBtn" class="hover:text-blue-600">Explore</button>
      <button id="orderBtn" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg shadow-md transition">Order Now</button>
    </nav>
  </header>

  <!-- 🪞 Main Hero -->
  <div class="glass p-10 w-11/12 md:w-3/4 text-center shadow-xl">
    <h2 class="text-4xl font-bold text-gray-800 mb-4">Unleash Your Design Exploration</h2>
    <p class="text-gray-700 mb-8">Discover limitless possibilities, push boundaries, and craft stunning designs with ease.</p>
    <button id="viewModalBtn" class="bg-gradient-to-r from-blue-500 to-purple-500 hover:from-purple-500 hover:to-blue-500 text-white px-8 py-3 rounded-full shadow-lg transition-all transform hover:scale-105">
      View Product
    </button>
  </div>

  <!-- 🧊 Product Modal -->
  <div id="productModal" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50 transition-all">
    <div class="glass p-8 w-11/12 md:w-1/2 relative fade-enter-active">
      <button id="closeProductModal" class="absolute top-3 right-4 text-gray-700 text-3xl hover:text-gray-900">&times;</button>
      <img src="https://via.placeholder.com/500x300.png?text=Product+Image" class="w-full rounded-2xl mb-5 shadow-lg" />
      <h3 class="text-2xl font-bold mb-2">Modern Design Chair</h3>
      <p class="text-blue-600 text-lg font-semibold mb-3">₱1,250.00</p>
      <p class="text-gray-700 mb-6 leading-relaxed">
        This modern chair brings elegance and comfort to your home. Crafted from premium materials for a luxurious feel.
      </p>
      <div class="flex gap-3">
        <button id="orderFromModal" class="flex-1 bg-gradient-to-r from-blue-500 to-purple-500 hover:from-purple-500 hover:to-blue-500 text-white px-6 py-2 rounded-lg shadow-lg transition">Order Now</button>
        <button id="addToCartBtn" class="flex-1 bg-white/40 hover:bg-white/60 text-gray-700 px-6 py-2 rounded-lg border border-white/40 transition">Add to Cart</button>
      </div>
    </div>
  </div>

  <!-- 🧾 Order Modal -->
  <div id="orderModal" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50">
    <div class="glass p-8 w-11/12 md:w-1/2 relative fade-enter-active">
      <button id="closeOrderModal" class="absolute top-3 right-4 text-gray-700 text-3xl hover:text-gray-900">&times;</button>
      <h3 class="text-2xl font-bold mb-4">Complete Your Order</h3>
      
      <div class="mb-6 bg-white/30 rounded-lg p-4 border border-white/40">
        <h4 class="font-semibold text-gray-800 mb-2">🪑 Product Summary</h4>
        <p class="text-gray-700">Modern Design Chair</p>
        <p class="text-blue-600 font-semibold">₱1,250.00</p>
      </div>

      <form id="orderForm" class="flex flex-col space-y-4">
        <input type="text" placeholder="Full Name" required class="px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-400 outline-none" />
        <input type="email" placeholder="Email Address" required class="px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-400 outline-none" />
        <input type="text" placeholder="Shipping Address" required class="px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-400 outline-none" />
        <button type="submit" class="bg-gradient-to-r from-blue-500 to-purple-500 hover:from-purple-500 hover:to-blue-500 text-white py-3 rounded-lg shadow-lg transition transform hover:scale-105">Confirm Order</button>
      </form>
    </div>
  </div>

  <!-- ✅ Success Toast -->
  <div id="successToast" class="hidden fixed bottom-6 right-6 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg transition transform scale-95 opacity-0">
    ✅ Order placed successfully!
  </div>

  <script>
    // Elements
    const productModal = document.getElementById('productModal');
    const orderModal = document.getElementById('orderModal');
    const viewModalBtn = document.getElementById('viewModalBtn');
    const closeProductModal = document.getElementById('closeProductModal');
    const orderFromModal = document.getElementById('orderFromModal');
    const orderBtn = document.getElementById('orderBtn');
    const closeOrderModal = document.getElementById('closeOrderModal');
    const successToast = document.getElementById('successToast');
    const orderForm = document.getElementById('orderForm');

    // 🔹 Open Product Modal
    viewModalBtn.addEventListener('click', () => openModal(productModal));

    // 🔹 Close Product Modal
    closeProductModal.addEventListener('click', () => closeModal(productModal));

    // 🔹 Open Order Modal (Navbar or Inside Product)
    orderBtn.addEventListener('click', () => openModal(orderModal));
    orderFromModal.addEventListener('click', () => {
      closeModal(productModal);
      setTimeout(() => openModal(orderModal), 200);
    });

    // 🔹 Close Order Modal
    closeOrderModal.addEventListener('click', () => closeModal(orderModal));

    // 🔹 Close modals on outside click
    window.addEventListener('click', (e) => {
      if (e.target === productModal) closeModal(productModal);
      if (e.target === orderModal) closeModal(orderModal);
    });

    // 🔹 Confirm Order
    orderForm.addEventListener('submit', (e) => {
      e.preventDefault();
      closeModal(orderModal);
      showToast();
      e.target.reset();
    });

    // 🧩 Helper Functions
    function openModal(modal) {
      modal.classList.remove('hidden');
      const content = modal.querySelector('.glass');
      content.classList.add('fade-enter');
      setTimeout(() => content.classList.add('fade-enter-active'), 10);
    }

    function closeModal(modal) {
      const content = modal.querySelector('.glass');
      content.classList.remove('fade-enter-active');
      content.classList.add('fade-exit-active');
      setTimeout(() => {
        modal.classList.add('hidden');
        content.classList.remove('fade-exit-active');
      }, 200);
    }

    function showToast() {
      successToast.classList.remove('hidden');
      setTimeout(() => {
        successToast.classList.remove('opacity-0', 'scale-95');
        successToast.classList.add('opacity-100', 'scale-100');
      }, 10);
      setTimeout(() => {
        successToast.classList.add('opacity-0', 'scale-95');
        setTimeout(() => successToast.classList.add('hidden'), 500);
      }, 3000);
    }
  </script>
</body>
</html>
